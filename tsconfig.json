{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": false,
		"inlineSourceMap": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"assets/*": ["assets/*"],
			"*": ["*", "src/*"]
		},
		"lib": [
			"es2017",
			"dom"
		],
		"allowJs": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"src/server"
	]
}
